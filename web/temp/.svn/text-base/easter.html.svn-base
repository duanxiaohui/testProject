		}, 1000);
		(function () {
			var q = '&push=1';
			if(getURLParameter('isappinstalled') == 1){
				q += '&isappinstalled=1';
			}
			else{
				q += '&isappinstalled=0'
			}
			if(getURLParameter('isShowBar') == 1){
				q += '&isShowBar=1';
			}
			var a = document.getElementById('faces').getElementsByTagName('a');
			for (var i = 0; i < a.length; i++) {
				a[i].href += q;
			};
		})()
		var w = $(window).width();
		var picList = $(".pic_list_div div"),
			mlNum = (w-40)/3,
			mlNumH = (mlNum*144)/89,
			picH = mlNumH*3 + 30;
			picList.width(mlNum).height(mlNumH);
			$(".pic_list_div").height(picH);
		picList.each(function( i, o){
			if(i%3 == 0){
				$(o).css({
					"left":"0px"
				})
			}
			if(i%3 == 1){
				$(o).css({
					"left":mlNum+ 5 + "px"
				})
			}
			if(i%3 == 2){
				$(o).css({
					"left":mlNum*2 + 10 + "px"
				})
			}
			if(i<3){
				$(o).css({
					"top":"0px"
				})
			}
			if(2<i && i<6){
				$(o).css({
					"top":mlNumH + 5 + "px"
				})
			}
			if(i>5){
				$(o).css({
					"top":mlNumH*2 + 10 + "px"
				})
			}
		})
	}
