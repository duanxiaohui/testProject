body {
	background-image: url(/images/index/background.png);
	background-repeat: repeat-x repeat-y;
}

.info_container {
	padding-left: 15px;
	padding-right: 15px;
}

.info {
	margin-top: 20px;
	min-height: 60px;
	line-height: 25px;
	padding: 10px 13px;
	background: #ffffff;
	font-family: Microsoft YaHei;
	font-size: 16px;
	color: #5796E3;
	border-style: solid;
	border-width: 1px;
	border-color: #8f8f8f;
}

.green_text {
	color: green;
}
.notice {
	margin: 10px auto 0px;
	font-family: Microsoft YaHei;
	font-size: 14px;
	color: #8f8f8f;
	font-weight: bold;
	line-height: 25px;
	text-shadow: 0px -1px 1px #ffffff;
}

.warning {
	margin: 10px auto 0px;
	font-family: Microsoft YaHei;
	font-size: 14px;
	color: #ff0000;
	font-weight: bold;
	line-height: 25px;
	width: 100%;
}

.input_line {
	margin: 10px auto 0px;
	font-family: Microsoft YaHei;
	font-size: 14px;
	color: #9a9a9a;
	font-weight: bold;
	line-height: 25px;
	text-shadow: 0px -1px 1px #ffffff;
}

.input_field {
	height: 25px;
	width: 90%;
	padding-right: 15px;
	color: green;
	font-size: 14px;
}

.submit_button_blue {
	margin-top: 10px;
	line-height: 60px;
	background: -webkit-gradient(linear, 0 0, 0 100%, from(#5ad0ff),
		to(#1b8cda) );
	-webkit-border-top-left-radius: 5px 10px;
	-webkit-border-top-right-radius: 5px 10px;
	-webkit-border-bottom-right-radius: 5px 10px;
	-webkit-border-bottom-left-radius: 5px 10px;
	font-size: 26px;
	font-weight: bold;
	font-family: Microsoft YaHei;
	color: #ffffff;
	text-shadow: 0px -1px 1px #132e56;
	text-align: center;
	cursor: pointer;
}

.submit_button_green {
	margin-top: 10px;
	line-height: 60px;
	background: -webkit-gradient(linear, 0 0, 0 100%, from(#c8f2a2),
		to(#5ec222) );
	-webkit-border-top-left-radius: 5px 10px;
	-webkit-border-top-right-radius: 5px 10px;
	-webkit-border-bottom-right-radius: 5px 10px;
	-webkit-border-bottom-left-radius: 5px 10px;
	font-size: 26px;
	font-weight: bold;
	font-family: Microsoft YaHei;
	color: #ffffff;
	text-align: center;
	text-shadow: 0px -1px 1px #132e56;
	cursor: pointer;
}

.slogan {
	margin-top: 35px;
	margin-bottom: 25px;
	color: #8f8f8f;
	font-size: 20px;
	font-weight: bold;
	text-align: center;
	font-family: Microsoft YaHei;
}

.icon_face {
	height: 50px;
	width: 50px;
}

.icon_group {
	height: 21px;
	width: 40px;
	margin-right: 5px;
}

.icon_apple {
	height: 30px;
	width: 25px;
	margin-right: 5px;
}

.icon_android {
	height: 30px;
	width: 25px;
	margin-right: 5px;
}

#infoList {
	margin-left: 15px;
	margin-right: 15px;
	margin-top: 20px;
}

.infoItemImgDiv {
	height: 18px;
	float: left;
	margin-right: 15px;
}

.infoItem {
	min-height: 35px;
}

.infoItemImg {
	width: 18px;
	height: 18px;
}

.infoItemText {
	color: #6d6e71;
	font-size: 13px;
	text-shadow: 0px -1px 1px #ffffff;
}

#AndroidAction {
	width: 40%;
	margin-right: 3%;
	margin-left: 7%;
	float: left;
}

#iPhoneAction {
	width: 40%;
	float: left;
	margin-left: 3%;
	margin-right: 7%;
}

#actionList {
	width: 100%;
	margin-top: 5%;
	padding-bottom: 15%;
}

.btn_line{
	margin: 10px auto 0px;
	height:36px;
	line-height:36px;
	font-size:14px bold;
	font-weigt:bold;
	background-color:#FFFFFF;
}

.btn {
	display: -moz-inline-box; 
	display: inline-block;
	cursor:pointer;
	font-size:18px;
	font-family: Microsoft YaHei;
	font-color: #414042;
	background-color:#eeeeee;
	padding-right:48px;
	padding-left:48px;
	border-left:1px solid #8f8f8f;
	border-top:1px solid #8f8f8f;
	border-right:1px solid #8f8f8f;
}

.btnoff{
	border-bottom:1px solid #8f8f8f;
	height:35px;
	line-height:35px;
}

.btnon{
	background-color:#ffffff;
	border-bottom: none;
	height:36px;
	line-height:36px;
}

.tab{
}

.hidden{
	display:none;
}

#main {
	clear: both;
	background: #ffffff;
	padding: 10px 15px 15px 15px;
	border:1px solid #8f8f8f;
}

#clearField{
	position: relative;
	float: right;
	top: -10px;
	left: -15px;
	width: 25px;
	height: 25px;
}

.thirdpartyicon {
	float: left;
	cursor: pointer;
	margin-top: 10px;
	margin-bottom: 10px;
	margin-left: 10px;
}