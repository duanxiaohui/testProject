.icon_hot:before, .icon_new:before {
    content: 'HOT';
    -webkit-transform: scale(.75);
    position: absolute;
    top: 1px;
    left: 2px;
    font-size: 12px;
    z-index: 2;
}
.icon_new:before {
    content: 'NEW';
}
.icon_hot, .icon_new {
    margin-left: 5px;
    display: inline-block;
    color: #fff;
    width: 30px;
    height: 15px;
    line-height: 15px;
    position: relative;
    border-radius: 3px;
    top: 1px;
}
.icon_hot:after, .icon_new:after {
    position: absolute;
    z-index: 1;
    right: -4px;
    top: 2px;
    content: '';
    width: 12px;
    height: 11px;
    border-radius: 3px;
    -webkit-transform: rotate(45deg);
}
.icon_green, .icon_green:after {
    background-color: #71cf67;
}
.icon_red, .icon_red:after {
    background-color: #f87474;
}

