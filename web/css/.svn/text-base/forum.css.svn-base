}
.return_btn{
    width: 50px;
    height: 44px;
    position: absolute;
    left: 0;
    top: 0;
}
.return_btn_icon {
    width: 13px;
    height: 13px;
    border-left: 1px solid #424446;
    border-bottom: 1px solid #424446;
    -webkit-transform: rotate(45deg);
    position: absolute;
    top: 15px;
    left: 20px;
}
.search_btn{
    width: 50px;
    height: 44px;
    position: absolute;
    right: 0;
    top: 0;
}
.search_btn_icon {
    width: 14px;
    height: 14px;
    border: 1px solid #424446;
    border-radius: 100%;
    position: absolute;
    top: 13px;
    right: 17px;
}
.search_btn_icon:after {
    width: 5px;
    content: ' ';
    display: block;
    margin: 14px;
    border-top: 1px solid #424446;
    -webkit-transform: rotate(45deg);
}
.content {
    display: block;
}
.none{
    display: none;
}
.list {
    width: 100%;
    float: left;
    padding-top: 15px;
    height: 60px;
}
.list.on {
    background-color: #40a4f7;
}
.list.on .list_info a, .list.on .list_info p {
