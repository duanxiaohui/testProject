}
.search {
    display: block;
}
.search_icon {
    width: 14px;
    height: 14px;
    border: 1px solid #424446;
    border-radius: 100%;
    float: left;
    position: absolute;
    left: 17px;
    top: 11px;
}
.search_icon:after {
    width: 5px;
    content: ' ';
    display: block;
    margin: 14px;
    border-top: 1px solid #424446;
    -webkit-transform: rotate(45deg);
}
.search_con {
    padding: 12px 17px 12px 46px;
    width: -webkit-calc(100% - 63px);
    float: left;
    border: none;
    font-size: 16px;
    height: 16px;
    color: #424446;
    display: block;
    border-radius: 0;
    background: none;
    -webkit-tap-highlight-color: rgba(0, 0, 0, 0);
    tap-highlight-color: rgba(0, 0, 0, 0);
}
.search_con:focus {
    outline: none;
    background-color: #40a4f7;
    color: #fff;
}
.search_con:focus + .search_icon, .search_con:focus + .search_icon:after {
    border-color: #fff;
}
.search_con::-webkit-input-placeholder {
    /* WebKit browsers */
    -webkit-transition: text-indent .5s ease-in;
    color: #ddd;
}
.search_con:focus::-webkit-input-placeholder {
    /* WebKit browsers */
    text-indent: -5em;
    color: #fff;
}
.search_tag_list {
    margin: 15px 12px 0;
    opacity: 0;
