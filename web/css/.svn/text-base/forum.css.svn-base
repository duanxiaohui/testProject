.loadmore {
    line-height: 51px;
    text-align: center;
    font-size: 14px;
    color: #bbb;
}
.icon_loadmore {
    width: 22px;
    height: 22px;
    border-radius: 100%;
    border: 1px solid #bbb;
    float: right;
    margin: 12px 15px 0 -39px;
}
.icon_loadmore:before {
    margin: 8px auto 0;
    content: ' ';
    width: 12px;
    border-top: 1px solid #bbb;
    display: block;
}
.icon_loadmore:after {
    content: ' ';
    display: block;
    margin: 2px auto 0;
    width: 7px;
    height: 7px;
    border-top: 1px solid #bbb;
    border-right: 1px solid #bbb;
