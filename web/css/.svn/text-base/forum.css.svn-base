.type_panel {
    background-color: #fff;
    position: absolute;
    top: -100%;
    left: 0;
    height: 100%;
    width: 100%;
    overflow: hidden;
    overflow-y: auto;
    -webkit-overflow-scrolling : touch;
    z-index: 2;
}
.type_list li {
    height: 45px;
    margin-bottom: 1px;
}
.type_list a {
    margin-left: 15px;
    padding: 0 35px 0 5px;
    color: #000;
    font-size: 16px;
    line-height: 45px;
    height: 45px;
    border-bottom: 1px solid #ddd;
    display: block;
    position: relative;
}
.type_list a:after {
    position: absolute;
    right: 15px;
    top: 17px;
    content: '';
