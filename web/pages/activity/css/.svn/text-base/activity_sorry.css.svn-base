@charset "UTF-8";

body { background: #fff; color: #444; font: 12px / 1.5em arial,"Microsoft YaHei", 微软雅黑; margin: 0; padding: 0;}
*{-webkit-tap-highlight-color: rgba(0,0,0,0); tap-highlight-color: rgba(0,0,0,0);}
div, dl, dt, dd, ul, ol, li, h1, h2, h3, h4, h5, h6, pre, form, fieldset, input, textarea, blockquote, p { margin: 0; padding: 0; }
ul { list-style: none; }
li { list-style-type: none; }
img { border: 0; vertical-align: top; }
select, input { font-size: 12px; }
table { border-collapse: collapse; border-spacing: 0; table-layout: fixed; }
.e_clear:after { clear: both; content: "."; display: block; height: 0; visibility: hidden; }
.e_clear { display: inline-block; }
.e_clear { display: block; }
textarea { background: #fff; border: 1px solid #d2d9dc; border-radius: 2px; box-shadow: 0 0 0 #d2d9dc; -moz-transition: .3s ease-in-out; transition-property: border box-shadow; -webkit-transition: .3s ease-in-out; }
textarea:focus, input[type="text"]:focus { /*border: 1px solid #b7d4ea;*/ box-shadow: 0 0 5px #b7d4ea; }
a { color: #208de9; cursor: pointer; text-decoration: none; }
.none{display:none;}

.main {padding:15px 0;}

.btn{padding:20px 0 0 0;}
.focus_btn{display:none;margin:0 15px; display:block; border:1px solid #338dd6; background:#5eadeb; height:50px; line-height:50px; text-align:center; font-size:18px; color:#fff;border-radius:5px; -webkit-border-radius:5px; }
.focus_btn:active{background:#53acf2;}
.btn .tip{font-size:12px; color:#ADADAD; text-align:center; padding:10px 0 0 0;}

.sorry_container {text-align:center; padding-top:20px;}
.sorry_container img{width:110px; height:110px;}
.sorry_container h1{font-weight:normal; font-size:16px; line-height:24px; padding:15px 0; color:#575757;}

.calendar_info_container {padding:10px; border-top:1px solid #E6E6E6; border-bottom:1px solid #E6E6E6;}
.calendar_info_container h1 {font-size:12px; line-height:20px; color:#575757; padding: 0 0 5px 0;}
.calendar_info h2 {font-weight:normal; font-size:15px; line-height:24px; color:#575757; padding:2px 0 0 5px; white-space:nowrap; word-break:keep-all; text-overflow:ellipsis; overflow:hidden;}
.calendar_info h3 {font-weight:normal; font-size:12px; line-height:24px; color:#ADADAD; padding:0 0 0 5px; white-space:nowrap; word-break:keep-all; text-overflow:ellipsis; overflow:hidden;}
.calendar_info_icon {width:50px; height:50px; overflow:hidden; border-radius:25px;}
.calendar_info_icon img {width:50px; } 
.calendar_info_icon {float:left;}

