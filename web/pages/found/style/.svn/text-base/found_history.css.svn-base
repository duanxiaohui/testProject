body{background:#eee;}
.found_history_img{position:relative; width:100%;}
.found_history_date{position:absolute; bottom:10px; right:25px;}
.found_history_month,.found_history_day{display:inline-block; width:49px; height:47px; font-size:20px; font-weight:600; line-height:47px; text-align:center; color:#fff; vertical-align: text-bottom; background:url(/pages/found/images_news/day_bg.png) no-repeat; background-size:100% 100%;}
.found_history_date span{display:inline-block; line-height:30px; margin:0 3px; vertical-align: text-bottom; color:#fff; font-size:14px;}
.found_history_top h2,.found_history_txt{padding:0 20px;}
.found_history_top h2{font-size:16px; color:#3A3A3A; line-height:35px;}
.found_history_txt p{font-size:14px; line-height:150%; color:#747474; margin-bottom:15px;}

.found_history_top,.found_history_list,.found_history_edit{background:#fff;}

.found_history_top{border-bottom:1px solid #e6e6e6; margin-bottom:10px;}
.found_history_list{border-top:1px solid #e6e6e6; padding:50px 15px 0;}


.found_history_list{border-bottom:1px solid #efefef; background:#fff url(/pages/found/images_news/shihaitaojin.png) no-repeat 15px 7px; background-size:100px 35px;}
.found_history_list ul{border-left:3px solid #f2f2f2; padding-left:20px; padding-bottom:10px;}

.found_history_list li h3{font-size:16px; color:#373737; line-height:28px; position:relative;}
.found_history_list li h3:after{content:" "; position:absolute; width:12px; height:12px; -webkit-border-radius:6px; background:#ebebeb; left:-27px; top:6px;}
.found_history_list li:first-child h3{line-height:20px;}
.found_history_list li:first-child p{margin-top:5px;}
.found_history_list li:first-child h3:after{top:0;}
.found_history_list li p{font-size:14px; color:#747474; padding-bottom:10px;}
.found_history_list li:last-child p{padding:0;}

.found_history_footer{height:150px; width:100%; background:#fff url(/pages/found/images_news/history_tips.jpg) no-repeat center center; background-size:170px 103px;}

.found_history_edit{line-height:50px; padding:0 15px; color:#000; font-size:14px; border-top:1px solid #e6e6e6;}
.