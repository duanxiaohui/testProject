::-webkit-input-placeholder {color: rgba(122,122,122,.4);}
body{margin: 0;}
.main{font-family: "Hiragino Sans GB", "Microsoft YaHei", 微软雅黑, SimSun, arial;}
.header{
	font-size: 20px;
	height: 50px;
	line-height: 50px;
	text-align: center;
	box-shadow: 1px 1px 1px #677285;
}
.content{padding-top: 50px;}
.text_div{
	width: 285px;
	height: 46px;
	margin: auto;
	line-height: 46px;
	border-radius: 23px;
	background-color: #f5f8f9;
	padding-left: 15px;
	margin-bottom:10px;
}
.text_div span{
	color:#898e91;
	font-size: 12px;
	display: inline-block;
	width: 40px;
}
.text_div input{
	border: none;
	outline-style: none;
	width: 220px;
	height: 35px;
	background-color: #f5f8f9;
}
.auth_div{
	width: 300px;
	height: 46px;
	margin: auto;
	margin-bottom:10px;
}
.auth_div .text_div{
	width:160px;
	margin:0;
	float: left;
}
.auth_div .text_div input{
	width:100px;
}
.auth_image{
	margin-left: 190px;
	padding-top: 12px;
}
.button{
	display: block;
	outline: none;
	border: none;
	width: 300px;
	height: 46px;
	margin: auto;
	color: #fff;
	text-align: center;
	line-height: 46px;
	font-size: 18px;
	border-radius: 23px;
	margin-top:16px;
}
.qq{
	background:url(/pages/login/images/qq.png) no-repeat #40a4f7;
	background-size: 35px;
	background-position: 7px 5px;
}
.weibo{
	background:url(/pages/login/images/weibo.png) no-repeat #eeb860;
	background-size: 35px;
	background-position: 7px 5px;
}
.account{
	background:url(/pages/login/images/account.png) no-repeat #85ccdb;
	background-size: 35px;
	background-position: 7px 5px;

}
.telephone{
	background:url(/pages/login/images/telephone.png) no-repeat #80da91;
	background-size: 35px;
	background-position: 7px 5px;
}
.footer{
	width: 100%;
	height: 48px;
	background: url(/pages/login/images/logo.png) no-repeat #e8e8e8;
	background-size: 90px 22px;
	position: fixed;
	left: 0px;
	bottom: 0px;
	background-position: 10px 15px;
}
.down_btn{
	outline: none;
	border: none;
	display: inline-block;
	color: #fff;
	background-color: #ff7900;
	text-align: center;
	width: 100px;
	height: 30px;
	position: absolute;
	right: 15px;
	top: 10px;
	border-radius: 5px;
	font-size: 15px;
	line-height: 30px;
	text-decoration: none;
}
.register,.login{
	background-color: #40a4f7;
	margin-top: 45px;
}