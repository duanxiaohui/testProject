<!DOCTYPE html>
<html>
<head>
<meta charset="utf-8">
<meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
<title>登录365日历</title>
<meta name="description" content="">
<meta name="keywords" content="">
<meta name="viewport" content="width=device-width,initial-scale=1.0,minimum-scale=1.0,maximum-scale=1.0">
<link href="/pages/login/css/login.css" rel="stylesheet">
</head>
<body>
	<div class="main">
		<div class="header">登录365日历</div>
		<div class="content">
			<button class="button qq">QQ登录</button>
			<button class="button weibo">微博登录</button>
			<button class="button account">365日历账号登录</button>
			<!-- <button class="button telephone">手机号登录</button> -->
		</div>
		<div class="footer">
			<a class="down_btn" href="http://a.app.qq.com/o/simple.jsp?pkgname=com.when.coco&g_f=991609">立即下载</a>
		</div>
	</div>
	<script src="/js/lib/zepto.min.js"></script>
	<script>
		var redURL = getURLParameter("redURL");
		var opt = getURLParameter('opt');

		$(".qq").on("tap", function(){
			location.href = "/qz/login.do?redURL=" + redURL;
		});
		$(".weibo").on("tap", function(){
			location.href = "/weibo/login.do?redURL=" + redURL;
		});
		$(".account").on("tap", function(){
			if(redURL.indexOf('?') > 0){
				var index = redURL.indexOf('?');
				location.href = "/account/login.do?"+(opt ? ('opt=' + opt + '&') : '')+"url=" + redURL.substr(0, index) + "&params=" + encodeURIComponent(redURL.substr(index + 1));
			}else{
				location.href = "/account/login.do?"+(opt ? ('opt=' + opt + '&') : '')+"url=" + redURL;
			}
		});
		$(".telephone").on("tap", function(){
			location.href = "/account/login.do?url=" + redURL;
		});
		function getURLParameter(name) {
			return decodeURIComponent((new RegExp('[?|&]' + name + '=' + '([^&;]+?)(&|#|;|$)').exec(location.search)||[,""])[1].replace(/\+/g, '%20'))||null;
		}
	</script>
</body>
</html>