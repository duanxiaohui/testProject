*{-webkit-tap-highlight-color: rgba(0,0,0,0); tap-highlight-color: rgba(0,0,0,0);}
body { background: #fff; color: #444; font: 14px "Hiragino Sans GB", "Microsoft YaHei", 微软雅黑,SimSun,arial; height: 100%; margin: 0; padding: 0; }
div, dl, dt, dd, ul, ol, li, h1, h2, h3, h4, h5, h6, pre, form, fieldset, input, textarea, blockquote, p { margin: 0; padding: 0; }
ul { list-style: none; }
li { list-style-type: none; }
img { border: 0; vertical-align: top; }
select, input { font-size: 12px; }
address, cite, code, em, th { font-style: normal; font-weight: normal; }
table { border-collapse: collapse; border-spacing: 0; table-layout: fixed; }
.e_clear:after { clear: both; content: "."; display: block; height: 0; visibility: hidden; }
.e_clear { display: inline-block; }
.e_clear { display: block; }
textarea { background: #fff; border: 1px solid #d2d9dc; border-radius: 2px; box-shadow: 0 0 0 #d2d9dc; -moz-transition: .3s ease-in-out; transition-property: border box-shadow; -webkit-transition: .3s ease-in-out; }
textarea:focus, input[type="text"]:focus { /*border: 1px solid #b7d4ea;*/ box-shadow: 0 0 5px #b7d4ea inset; }
a { color: #208de9; cursor: pointer; text-decoration: none; }

.rule{background:#eee;}
.rule_top{padding:20px; background:#fff;}
.rule_top h3{font-size:15px; color:#000; line-height:150%;}
.rule_top p{font-size:12px; color:#111; line-height:150%; margin-top:10px;}

.rule_list{margin-top:15px; background:#fff; padding:20px 0 20px 20px;}
.rule_list li{line-height:40px; color:#111; font-size:12px; border-bottom:1px solid #ececec;}


.rule_1,.rule_2,.rule_3{padding:20px;}
.rule_1 h2,.rule_2 h2,.rule_3 h2{font-size:15px; color:#000; line-height:40px;}
.rule_1 p,.rule_2 p{line-height:150%;}
.rule_img1,.rule_img2,.rule_img3{width:115px; height:204px; margin:20px auto;}
.rule_img4{width:122px; height:215px; margin:20px auto;}
.rule_img1 img,.rule_img2 img,.rule_img3 img,.rule_img4 img,.rule_img5 img{width:100%; height:100%;}

.rule_2 p{margin:10px 0;}
.rule_2 h4{margin-top:10px; font-size:13px;}

.rule_3 h4{color:#111; font-size:14px; margin:10px 0 5px 0; line-height: 15px; padding-left:12px; position: relative;}
.rule_3 h4:before{
	width: 3px;
	height: 14px;
	margin-right: 7px;
	margin-left: 2.5px;
	background-color: #0085b2;
	border-radius: 3px;
	-webkit-border-radius: 3px;
	content: ' ';
	position:absolute;
	left:0;
	top:0;

}
.rule_3 p{margin-bottom:15px; line-height:150%; padding-left:12px;}


.rule_5{padding:20px;}
.rule_5 p{line-height:180%;}

.a00{background:#e6e6e6;}

