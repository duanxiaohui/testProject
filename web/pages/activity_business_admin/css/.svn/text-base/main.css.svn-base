.upload_image_link:after{content:""; position:absolute; width:4px; height:30px; left:50%; top:50%; margin:-15px 0 0 -2px; background:#fff;
	}
.upload_image_link:before{content:""; position:absolute; width:30px; height:4px; left:50%; top:50%; margin:-2px 0 0 -15px; background:#fff;}

