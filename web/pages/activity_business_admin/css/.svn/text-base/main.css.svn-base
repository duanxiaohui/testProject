float: left;margin-right: 20px; margin-top:10px; border: 1px solid #969696;position: relative;text-align: center;}
.create_upload_imglist li:hover .del_img_btn{display:block;}
.del_img_btn{width:15px; height:15px; position:absolute; z-index:2; top:-1px; right:-1px; display:none; background:#f00; cursor:pointer; border:1px solid #969696;}
.del_img_btn:after{content:" ";width:2px; height:12px; background:#fff; position:absolute;
left:6px; top:1px;
	-webkit-transform: rotate(45deg);
    -moz-transform: rotate(45deg);
    -o-transform: rotate(45deg);
 }
 .del_img_btn:before{content:" ";width:2px; height:12px; background:#fff; position:absolute;
left:6px; top:1px;
	-webkit-transform: rotate(-45deg);
    -moz-transform: rotate(-45deg);
    -o-transform: rotate(-45deg);
 }

