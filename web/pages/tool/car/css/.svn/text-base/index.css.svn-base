body { background: #2b2b2b; color: #444; font: 12px / 1.5em "Microsoft YaHei", 微软雅黑,SimSun,arial; margin: 0; padding: 0; }
div, dl, dt, dd, ul, ol, li, h1, h2, h3, h4, h5, h6, pre, form, fieldset, input, textarea, blockquote, p { margin: 0; padding: 0; }
ul { list-style: none; }
li { list-style-type: none; }
img { border: 0; vertical-align: top; }
select, input { font-size: 12px; }
address, cite, code, em, th { font-style: normal; font-weight: normal; }
a{text-decoration: none; }
.none{display:none;}
.e_clear:after { clear: both; content: "."; display: block; height: 0; visibility: hidden; }
.e_clear { display: inline-block; }
.e_clear { display: block; }

.select_head{height:80px; padding:0 5%;}
.botton{float:right; width:60px; height:25px; text-align:center; line-height:25px; font-size:16px; margin-top:27px; background:#0893ff; color:#fff; border-radius: 3px;}
.select_head p{line-height:80px; font-size:16px; color:#fff;}
.set_btn{position:absolute; width:16px; height:16px; background:url(../images/set_btn.png) no-repeat; background-size:16px 16px; top:12px;right: 0px;}
.constellation_list{padding:0 5%;}
.constellation_list ul{margin-left:-5%;}
.constellation_list li{width:45%; height:90px; line-height:90px; float:left; background:#4a4a4a; color:#fff; text-align:center; margin:5px 0 5px 5%;font-size:16px;}
.constellation_list li.on{background:-webkit-linear-gradient(270deg, #fd494c, #d60454);
}

.add_num{margin:10px 5% 0; font-size:16px; color:#898989; border-top:1px solid #898989;}
.add_num input{height:80px; width:80px; border:0; border-bottom:1px solid #898989; background:none; text-align:center; color:#fff; font-size:80px; outline:none;}

.limit_content{padding:0 5%;background:-webkit-linear-gradient(270deg, #ff4c4c, #d50255);}
.limit_head{height:40px; line-height:40px; text-align:center; font-size:16px; color:#fff;position: relative;}
.date{height:20px; line-height:20px; text-align:center; font-size:16px; color:#fff;}
.today_num{text-align:center; padding:20px 0;}
.today_num ul{display:inline-block;}
.today_num li{width:120px; height:80px; line-height:80px; font-size:80px; text-align:center; float:left; color:#fff; font-weight:500; font-family:arial;}
.today_num li:first-child{border-right:2px solid #fff;}
.today_num li:last-child{border-left:2px solid #fff;}
.tips{padding:8px; line-height:160%; font-size:12px; background:rgba(166,32,56,.8); color:#FFF; border-radius: 4px;}
.limit_num_list{padding:3%; background:#fff; border-radius: 5px; margin-top:10px;}
.limit_num_list li{height:44px; line-height:44px; overflow: hidden; border-bottom:1px solid #e0e1e1; font-size:16px; color:#727171;}
.limit_num_list li:last-child{border:0;}
.wek_num{float:right;}
.wek_num span{padding:0 10px; color:#f00; font-size:24px;}
.wek_num span.on{font-weight:800; font-weight:26px;}
.wek_num span:last-child{border-left:1px solid #f00;}




.set_display{padding:15px 0;font-size:16px; color:#fff; height:25px;}
.display_btn{float:right; width:40px; height:25px; border-radius: 13px; background:#4cd964; margin-top:-5px; position: relative;}
.display_btn:after{content:" "; position:absolute; width:23px; height:23px; border-radius: 100%; background:#fff; top:1px; right:1px;}

.colse .display_btn{background:#ccc;}
.colse .display_btn:after{left:1px;}