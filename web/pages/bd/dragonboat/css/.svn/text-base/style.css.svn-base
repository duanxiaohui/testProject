body { background: url(/pages/bd/dragonboat/images/index_bg.jpg) no-repeat; color: #444; font: 12px / 1.5em arial,"Microsoft YaHei", 微软雅黑; margin: 0; padding: 0;}
html, body {
-webkit-user-select: none; /* 禁止选中文本（如无文本选中需求，此为必选项） */
user-select: none;
background-size: 100% 100%; height:100%;
}
*{-webkit-tap-highlight-color: rgba(0,0,0,0); tap-highlight-color: rgba(0,0,0,0);}
div, dl, dt, dd, ul, ol, li, h1, h2, h3, h4, h5, h6, pre, form, fieldset, input, textarea, blockquote, p { margin: 0; padding: 0; }
ul { list-style: none; }
li { list-style-type: none; }
img { border: 0; vertical-align: top; }
select, input { font-size: 12px; }
address, cite, code, em, th { font-style: normal; font-weight: normal; }
table { border-collapse: collapse; border-spacing: 0; table-layout: fixed; }
.e_clear:after { clear: both; content: "."; display: block; height: 0; visibility: hidden; }
.e_clear { display: inline-block; }
.e_clear { display: block; }
html, body{
	height:100%;
}
.bar {
    width: 100%;
    height: 48px;
    line-height: 48px;
    font-size: 16px;
    color: #000;
    background: #fff;
    text-align: center;
    border-bottom: 1px solid #e0e0e0;
    top: 0;
    z-index: 99;
    display: none;
    position: fixed;
}

.weixin .bar {
    display: block;
}
.weixin .main{
    margin-top: 48px;
}

.return_btn {
    display: block;
    position: absolute;
    width: 15px;
    height: 15px;
    border: 1px solid #fff;
    border-right: 0;
    border-bottom: 0;
    transform: rotate(-45deg);
    -webkit-transform: rotate(-45deg);
    left: 15px;
    top: 14px;
}

.share_btn{width:20px; height:20px; position: absolute; top:14px; right:15px; background:url(/pages/bd/2015_easter/images/share_btn.png) no-repeat; background-size:100% 100%;} 

.bar_txt{margin:0 40px; height:48px; line-height:48px; text-align:center; overflow:hidden;text-overflow:ellipsis; white-space: nowrap;}

.index{
	position: relative;
	height:100%;
}
.index img{
	position: relative;
	z-index: 2;
}

.active{
	width: 100%;
	text-align: center;
	position: absolute;
	z-index: 1;
	bottom: 10px;
}
.dw_first_btn_div{width:100%; height:60px; background:url(/pages/bd/dragonboat/images/dw_first_btn_div.png) no-repeat center top; background-size:auto 100%; position: absolute; bottom:30px;}
.dw_first_btn{}
.btn_s{width:85px; height:87px; position:relative; margin:0 auto;}
.btn_an{width:85px; height:87px; position:absolute; top:0; left:0; z-index:2; background:url(/pages/bd/dragonboat/images/an.png) no-repeat; background-size:100% 100%;}
.dw_first_btn{width:72px; height:68px; position:absolute; top:50%; left:50%; margin:-34px 0 0 -36px; background:url(/pages/bd/dragonboat/images/btn.png) no-repeat; background-size:100% 100%; z-index:3;}

.plaza{
    overflow: hidden;
}
.plaza body{
    overflow: hidden;
}
.plaza .index{
    padding-top: 49px;
}
.plaza .bar{
    display: block;
}
.plaza .dw_first_btn_div{
	bottom:79px;
}

.animated {
    -webkit-animation-duration: 2s;
    animation-duration: 2s;
    -webkit-animation-fill-mode: both;
    animation-fill-mode: both;
    -webkit-animation-iteration-count: infinite;
    animation-iteration-count: infinite
}

@-webkit-keyframes flash {
    0%, 100%, 50% {
        transform:scale(1,1);
        -webkit-transform:scale(1,1);
        opacity: 1
    }
    25%,
    75% {
        transform:scale(.8,.8);
        -webkit-transform:scale(.8,.8);
        opacity: 0
    }
}

@keyframes flash {
    0%, 100%, 50% {
        transform:scale(1,1);
        -webkit-transform:scale(1,1);
        opacity: 1
    }
    25%,
    75% {
        transform:scale(.8,.8);
        -webkit-transform:scale(.8,.8);
        opacity: 0
    }

}

.flash {
    -webkit-animation-name: flash;
    animation-name: flash
}
