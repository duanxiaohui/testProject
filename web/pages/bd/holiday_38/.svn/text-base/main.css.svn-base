body { color: #444; font: 12px / 1.5em "Hiragino Sans GB", "Microsoft YaHei", 微软雅黑,SimSun,arial; margin: 0; padding:0;}
div, dl, dt, dd, ul, ol, li, h1, h2, h3, h4, h5, h6, pre, form, fieldset, input, textarea, blockquote, p { margin: 0; padding: 0; }
ul { list-style: none; }
li { list-style-type: none; }
img { border: 0; }
address, cite, code, em, th { font-style: normal; font-weight: normal; }
*{-webkit-tap-highlight-color: rgba(0,0,0,0); tap-highlight-color: rgba(0,0,0,0);}

a{text-decoration: none; }
.none{display:none;}
.e_clear:after { clear: both; content: "."; display: block; height: 0; visibility: hidden; }
.e_clear { display: inline-block; }
.e_clear { display: block; }

html, body{height:100%;}
body{
	background-color: #fafafa;
}

img{
	width: auto; 
	visibility: visible; 
	height: auto; 
	vertical-align: bottom;
	max-width: 100%;
}

.banner{
	margin: 0 13%;
}
.banner img{
	margin-top: 10px;
}
.list{
	margin: 0 4%;
}

.list img{
	margin-top:10px;
}

.p img{
	border: 1px solid #eee;
}

.info{
	margin: 20px 10%;
}

.control{
	text-align: center;
	background: url(http://www.365rili.com/pages/bd/holiday_38/images/btn1.jpg) no-repeat center;
	-webkit-background-size: 94px 96px;
	background-size: 94px 96px;
	height:96px;
	line-height: 150px;
	overflow: hidden;
	display: block;
}
.control span{
	font-size: 14px;
	color: #ec6f8e;
	margin-top: 30px;
}
.control img{
	width: 94px;
	height: 96px;
}

.score{
	text-align: center;
	background: url(http://www.365rili.com/pages/bd/holiday_38/images/score.jpg) no-repeat center;
	-webkit-background-size: 94px 96px;
	background-size: 94px 96px;
	height:96px;
	line-height: 80px;
	overflow: hidden;
	display: block;
}

.has{
	background-image: url(http://www.365rili.com/pages/bd/holiday_38/images/btn2.gif);
}

.score span{
	color: #ec6f8e;
}

.join{
	margin: 20px 17%;
}

.infoTip{
	text-align: center;
	font-size: 14px;
	color: #ec6f8e;
	margin: -5px 30% 10px;
}

.message{
	margin: 20px 14%;
}

.tipBox{
	position: fixed;
	left: 0;
	top: 0;
	z-index: 2;
	width: 100%;
}
.tipBox .mash{
	position: absolute;
	left: 0;
	top: 0;
	z-index: 1;
	background-color: #000;
	opacity: 0.9;
	width: 100%;
	height: 100%;
}

.tipBox .tip{
	position: relative;
	left: 0;
	top: 0;
	z-index: 2;
	margin: 50px 10%;
}

.cloneScore{
	position: absolute;
	line-height: 12px;
	color: #000;
	font-weight: bold;
	
}

@-webkit-keyframes bounceOut {
    0% {
        -webkit-transform: scale3d(1.1,1.1,1.1);
        transform: scale3d(1.1,1.1,1.1)
    }

    100% {
        opacity: 0;
        -webkit-transform: scale3d(5,5,5);
        transform: scale3d(5,5,5)
    }
}
.bounceOut {
	-webkit-animation-name: bounceOut;
	animation-name: bounceOut;
	-webkit-animation-duration: .75s;
	animation-duration: .75s
}
.animated {
	-webkit-animation-duration: 1s;
	animation-duration: 1s;
	-webkit-animation-fill-mode: both;
	animation-fill-mode: both
}

footer{
	margin: 25px 4% 0;
	padding-bottom: 77px;
}