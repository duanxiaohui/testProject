@-webkit-keyframes flash {
    0%, 100%, 50% {
        opacity: 1
    }
    25%,
    75% {
        opacity: 0
    }
}
.flash {
    -webkit-animation-name: flash;
}

@-webkit-keyframes flashQ {
    0%, 15%, 100%, 50%, 65% {
        opacity: 0
    }
    2%, 52% {
        opacity: 1;
    }
}

.flashQ {
    -webkit-animation-name: flashQ;
    -webkit-animation-duration: 2.47s;
}

@-webkit-keyframes flashBtn {
    0%, 49% {
        opacity: 1
    }
    50%, 99% {
        opacity: 0
    }
}

.flashBtn {
    -webkit-animation-name: flashBtn;
    -webkit-animation-duration: .6s;
}