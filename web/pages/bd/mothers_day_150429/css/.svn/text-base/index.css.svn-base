/*--- 分享页 ---*/
#user {
    text-align: center;
    margin: -50px auto 0;
}

.avatar {
    position: relative;
    width:25%;
    background-color: #ffffff;
    background-origin: padding-box;
    line-height: 0;
/*    padding:3px;*/
    border: solid 3px #fff;
    border-radius: 160px;
    margin: 0 auto 5px;
/*    transform: translateY(-50%);*/
    z-index: 15;
}
.avatar img {
    width:100%;
/*    margin: 5px;*/
    border-radius: 160px;
}

.user-title {
    width:85%;
    font-size: 20px;
    font-size: 1.25em;
    line-height: 26px;
/*    font-size: 1.875em;*/
    margin: 0 auto 15px;
    text-align: center;
}

.container {
    width:81.5625%;
    margin: 20px auto 0;
}
.container.share,.container.replay {
    display: none;
}
.container .con-header {
    background: url("../images/cont-top.jpg") no-repeat;
    background-size: 100% 100%;
    height: 20px;
}
.container .con-footer {
    background: url("../images/cont-bottom.jpg") no-repeat;
    background-size: 100% 100%;
    height: 20px;
}
.container .con-content {
    color: #fff;
    text-align: center;
    padding: 0 10%;
    min-height: 200px;
    background: url("../images/con-con.jpg") repeat-y;
    background-size:100% auto;
}
.con-content .title {
    text-align: center;
}
.con-content .title img {
    width:95%;
}
.con-content p {
    font-weight: bold;
    font-size: 20px;
    color: aliceblue;
    margin: 10px 0 10px;
    text-align: center;
    word-wrap:break-word;
}
 

.ultli {
    padding:10px 0;
}
.ultli li {
    padding: 3px 0;
}
.ultli li {
    color:#fff;
    background: #a50102;
    text-align: center;
    border-radius: 25px;
    margin-bottom: 5px;
}

p.msg{
    text-align: center;
    margin: 20px 0 12px;
    font-size: 16px;
/*    font-size: 1em;*/
}

.share-btn {
    width:80%;
    text-align: center;
    margin: 0 auto;
}
.share-btn a {
    display: block;
    padding: 30px 0;
    margin-top: -20px;
}
.share-btn a img {
    width:100%;
}
/*--- 大招页 ---*/
.container.super {
    display: none;
}
.ult {
    position: relative;
    border:solid 2px #ff7133;
    padding: 5%;
    text-align: center;
}
.ult.super {
    padding-bottom: 0;
}
.ult .ult-title {
    position: absolute;
    background: #fff;
    width:45.3%;
    top: 0;
    left:50%;
    line-height: 0;
    transform: translate(-50%,-50%);
    -ms-transform: translate(-50%,-50%);
    -moz-transform: translate(-50%,-50%);
    -webkit-transform: translate(-50%,-50%);
    -o-transform: translate(-50%,-50%);
    text-align: center;
    padding:0 5px;
}
.ult.super .ult-title {
    width:70%;
}
.ult img {
    width:100%;
    line-height: 0;
}
.ult img.sub-title-super {
    display: block;
    width:70%;
    margin: 15px auto;
}
.ult p {
    text-align: center;
    margin: 5% 1% 0;
    font-size: 14px;
    line-height: 20px;
}

.ult .super-text {
    display: block;
    resize: none;
    text-align: left;
    width: 70%;
    height: 200px;
    line-height: 40px;
    border: none;
    background: url("../images/text-bg.jpg") repeat 0 0;
    background-position: top;
    background-size: 100% 80%;
    white-space: normal;
    margin: 0 auto;
    outline: none;
}
.ult .super-msg {
    color:#ddd;
/*    display: block;*/
    margin: 20px 0 0;
    text-align: right;
}


.ult-type {
    margin: 15px auto;
}

.ult-type > a {
    float: left;
    display: block;
    width:48%;
    text-align: center;
}
.ult-type img {
    width:70%;
}
.ult-type a,.ult-type img {
/*    pointer-events:none;*/
}
