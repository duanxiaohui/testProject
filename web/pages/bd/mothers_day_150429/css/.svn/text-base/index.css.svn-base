@charset "UTF-8";
body,textarea {
    background: #fff;
    color: #000000;
    font: 100% / 1.5em "Microsoft YaHei", "微软雅黑", "SimSun", "arial";
    height: 100%;
    margin: 0;
    padding: 0;
}

div, dl, dt, dd, ul, ol, li, h1, h2, h3, h4, h5, h6, pre, form, fieldset, input, textarea, blockquote, p {
    margin: 0;
    padding: 0;
}

ul {
    list-style: none;
}

li {
    list-style-type: none;
}

img {
    border: 0;
    vertical-align: top;
}

select, input {
    font-size: 12px;
}

address, cite, code, em, th {
    font-style: normal;
    font-weight: normal;
}

table {
    border-collapse: collapse;
    border-spacing: 0;
    table-layout: fixed;
}

.e_clear:after {
    clear: both;
    content: ".";
    display: block;
    height: 0;
    visibility: hidden;
}

.e_clear {
    display: inline-block;
}

.e_clear {
    display: block;
}

.err {
    font-size: 12px;
}

