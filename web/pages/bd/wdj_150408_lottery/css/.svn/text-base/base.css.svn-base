body { background: #f5f4f0; color: #444; font: 12px / 1.5em "Microsoft YaHei", 微软雅黑,SimSun,arial; height: 100%; margin: 0; padding: 0; }
div, dl, dt, dd, ul, ol, li, h1, h2, h3, h4, h5, h6, pre, form, fieldset, input, textarea, blockquote, p { margin: 0; padding: 0; }
ul { list-style: none; }
li { list-style-type: none; }
img { border: 0; vertical-align: top; }
select, input { font-size: 12px; }
address, cite, code, em, th { font-style: normal; font-weight: normal; }
table { border-collapse: collapse; border-spacing: 0; table-layout: fixed; }
.e_clear:after { clear: both; content: "."; display: block; height: 0; visibility: hidden; }
.e_clear { display: inline-block; }
.e_clear { display: block; }
textarea { background: #fff; border: 1px solid #d2d9dc; border-radius: 2px; box-shadow: 0 0 0 #d2d9dc; -moz-transition: .3s ease-in-out; transition-property: border box-shadow; -webkit-transition: .3s ease-in-out; }
textarea:focus, input[type="text"]:focus { /*border: 1px solid #b7d4ea;*/ box-shadow: 0 0 5px #b7d4ea; }
a { color: #208de9; cursor: pointer; text-decoration: none; }
html{height:100%;}

.main{width:640px;  margin:0 auto; height:100%; background:url(../images/bg.jpg) no-repeat;}
.lottery{width:540px; height:540px; margin:0 auto; position:relative;}
.circle_box{width:540px; height:540px;overflow:hidden; position:relative;}
.circle{position:absolute; width:540px; height:540px; background:url(../images/circle.png) no-repeat;  z-index:1;}
.start{position:absolute; width:188px; height:188px; background:url(../images/start_active.png) no-repeat; z-index:3; top:50%; left:50%; margin:-94px 0 0 -94px;}
.pointer{position:absolute; width:276px; height:276px; background:url(../images/pointer.png) no-repeat; z-index:2; top:-2px; left:50%; margin-left:-138px;}
.lottery_txt{padding:20px 10px; color:#fff;}
.lottery_txt h3{font-size:14px; padding-bottom:10px; color:#386d88; font-weight:500;}
.lottery_txt p{font-size:14px; line-height:180%; color:#386d88;}

.lottery_info{position:absolute; width:100%; left:0; top:0; background:#f9edcd url(../images/bg_2.jpg) no-repeat center center; background-size:100% 100%; z-index:5;}
.top_txt{width:253px; height:91px; background:url(../images/top.png) no-repeat; margin: 45px auto 0; background-size: 100% 100%;}
.prize{padding:10px 15px 0 15px;}
.prize_pic{ text-align: center; width:262px; height:65px; margin:0 auto;}
.prize_pic img{height:100%;}
.prize_txt{height:22px; line-height:22px; color:#fff; font-size:12px; color:#643918; text-align:center;}
.prize_txt span{color:#ff9000;}

.lottery_info_div{width:222px; padding:0 20px 20px; background:rgba(255,225,144,.8); margin:15px auto 0;}
.lottery_info_txt{padding:0 15px;}
.lottery_info_txt h3{font-size:16px; line-height:55px; color:#643918; text-align:center;}
.lottery_info_txt input{width:96%; height:22px; margin:3px 0; padding:4px 2%; font-size:14px; border:0;}
.lottery_note{padding:0 15px;}
.lottery_note p{color:#fff;  padding:5px 0; padding-left:25px; text-indent: -25px;}

.submit_btn{display:block; width:100%; height:40px; text-align:center; line-height:40px; color:#ff3600; font-size:15px; background:#ffbf61; margin:10px 0 0 0;}

.confirm_info_layer{width:242px; padding:10px 10px; background:rgba(255,225,144,.8); margin: 10px auto 0;}
.confirm_info_layer h3{text-align:center; font-size:16px; line-height:40px; color:#ff3600;}
.confirm_info_layer p{ text-align:center; color:#643918; font-size:14px; line-height:30px;}
.confirm_info_layer p span{color:#ff4800;}
.none{display:none;}

.view_btn{width:120px; height:29px; margin:15px auto 0; background:url(../images/view_btn.png) no-repeat; background-size:100% 100%;}
.lottery-cp{position:absolute; width:222px; padding:10px 20px; min-height:100px; background:rgba(255,225,144,.8); left:50%; margin-left:-131px; top:180px;}
.lottery-cp h3{line-height:40px; text-align:center; font-size:16px; color:16px; position:relative;}
.lottery-cp h3 span{position:absolute; font-size:12px; color:#643918; left:0px; top:0px;}
.lottery-cp p{line-height:160%;}
.logo{width:170px; height:29px; position:absolute; top:5px; left:10px; background:url(../images/wdj_logo.png) no-repeat; background-size:100% 100%;}


@media all and (max-width: 768px){
    .main{width:100%; background-size:100% 100%; padding:0 0 0px 0;}
    .lottery{width:270px; height:270px; margin:0px auto;  position:relative;}
    .content{padding:100px 0 0 0;}
    .circle_box{width:270px; height:270px;overflow:hidden; position:relative;}
    .circle{position:absolute; width:270px; height:270px; background:url(../images/circle.png) no-repeat; background-size:270px 270px; z-index:1;}
    .start{position:absolute; width:94px; height:94px; background:url(../images/start_active.png) no-repeat; background-size:94px 94px; z-index:3; top:50%; left:50%; margin:-47px 0 0 -47px;}
    .pointer{position:absolute; width:138px; height:138px; background:url(../images/pointer.png) no-repeat; background-size:138px 138px; z-index:2; top:-1px; left:50%; margin-left:-69px;}
}
@media(max-height: 480px){
	.main{overflow-x:hidden;}
	.content{padding:40px 0 0 0;}
}
@media (device-height:568px) and (-webkit-min-device-pixel-ratio:2){/* 兼容iphone5 */
	.content{padding:90px 0 0 0;}
	.prize{padding:30px 15px 0 15px;}
	.lottery_info_div{margin:40px auto 0;}
	.lottery-cp{top:250px;}
}
@media (device-height:667px) and (-webkit-min-device-pixel-ratio:2){/* 兼容iphone6 */
	.content{padding:150px 0 0 0;}
	.top_txt{margin:90px auto 0;}
	.prize_txt{font-size:16px;}
	.lottery-cp{top:250px;}
} 

@media (device-height:736px) and (-webkit-min-device-pixel-ratio:2){/* 兼容iphone6 Plus */
	.content{padding:150px 0 0 0;}
	.lottery{width:325px; height:325px; margin:0px auto;  position:relative;}
	.circle_box{width:325px; height:325px;overflow:hidden; position:relative;}
    .circle{position:absolute; width:325px; height:325px; background:url(../images/circle.png) no-repeat; background-size:325px 325px; z-index:1;}
    .start{position:absolute; width:112px; height:112px; background:url(../images/start_active.png) no-repeat; background-size:112px 112px; z-index:3; top:50%; left:50%; margin:-56px 0 0 -56px;}
    .pointer{position:absolute; width:166px; height:166px; background:url(../images/pointer.png) no-repeat; background-size:166px 166px; z-index:2; top:-1px; left:50%; margin-left:-83px;}

    .content{padding:150px 0 0 0;}
	.top_txt{margin:90px auto 0;}
	.prize_txt{font-size:16px;}
	.lottery-cp{top:250px;}

}