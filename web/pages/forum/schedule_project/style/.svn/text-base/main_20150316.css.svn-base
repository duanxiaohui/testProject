body { background: #fff; color: #444; font: 12px / 1.5em "Hiragino Sans GB", "Microsoft YaHei", 微软雅黑,SimSun,arial; margin: 0; padding:0;}
div, dl, dt, dd, ul, ol, li, h1, h2, h3, h4, h5, h6, pre, form, fieldset, input, textarea, blockquote, p { margin: 0; padding: 0; }
ul { list-style: none; }
li { list-style-type: none; }
img { border: 0; vertical-align: top; }
select, input { font-size: 12px; }
address, cite, code, em, th { font-style: normal; font-weight: normal; }
*{-webkit-tap-highlight-color: rgba(0,0,0,0); tap-highlight-color: rgba(0,0,0,0);}

a{text-decoration: none; }
.none{display:none;}
.e_clear:after { clear: both; content: "."; display: block; height: 0; visibility: hidden; }
.e_clear { display: inline-block; }
.e_clear { display: block; }

.bar{width:100%;height:48px; line-height:48px; font-size:16px; color:#000; background:#fff; text-align:center; border-bottom:1px solid #e0e0e0;position: fixed; top:0;}
.bar_txt{padding:0 40px; height:48px; line-height:48px; text-align:center; overflow:hidden;text-overflow:ellipsis; white-space: nowrap;}
.return_btn{display:block; position:absolute; width:15px; height:15px; border:1px solid #000; border-right:0; border-bottom:0; transform:rotate(-45deg); -webkit-transform:rotate(-45deg); left:15px; top:17px;}
.share_btn{width:20px; height:20px; position: absolute; top:14px; right:15px; background:url(../images/share_btn.png) no-repeat; background-size:100% 100%;} 

.main{width:100%;padding-top: 48px;}
.main_content{padding:0 15px;}
.main_content img{width:100%; margin:15px 0;}
.main_content h3{font-weight:500; color:#353535;}
.main_content p{margin:0 0 19px 0; font-size:14px; color:#707070; line-height:180%;}
.main_content p.fc_000{color:#353535;}
.weixin .bar{display:none;}
.weixin .main{
	padding-top: 0;
	padding-bottom: 52px;
}

.btn{display:block; width:100%; height:40px; border:1px solid #76c925; border-radius:5px; -webkit-border-radius:5px; color:#76c925; text-align:center; line-height:40px; font-size:16px; margin-bottom:15px;}

.btn_txt{display:block; width:100%; height:40px; border:1px solid #d2d2d2; border-radius:5px; -webkit-border-radius:5px; color:#131313; text-align:center; line-height:40px; font-size:16px; margin-bottom:15px;}
.btn_txt:active{background:#d2d2d2;}
.btn:active{background:#afea75;}

.vs{padding:20px 0;}
.vs td{
	vertical-align: top;
}
.vs table span{
	display: block;
	text-align: center;
}
.left_logo{width:41px; height:41px; display: inline-block; background-image:-webkit-image-set(
		url(../images/logo1.jpg) 2x
	);}

.right_logo{width:41px; height:41px; display: inline-block; background-image:-webkit-image-set(
		url(../images/logo2.jpg) 2x
	);}

.vs_txt{height:41px; text-align:center;}
.vs_txt p{white-space: nowrap;}
.members_list {width:48%; padding-bottom:15px;}
.members_list table{border-radius:5px; -webkit-border-radius:5px;}
.members_list table{border-collapse: collapse;border-spacing: 0;table-layout: fixed; width:100%;}
.members_list table th,.members_list table td{border:1px solid #d2d2d2}
.members_list table th{height:25px; line-height:25px; background:#eeeeee;}
.members_list table td{height:40px; line-height:40px; text-align:center;}
.left{float:left;} 
.right{float:right;}

.remind_div{padding:10px 0; text-align:center;border-top: 1px dashed #d4dbe0;}
.remind_div span{display:inline-block; height:18px; line-height:18px; vertical-align: middle; margin-left:8px;}
.remind_div .on{background:url(/images/forum/remind_icon_hover.png) no-repeat; background-size:16px 18px;}
.remind_icon{display:inline-block; width:16px; height:18px; background:url(/images/forum/remind_icon.png) no-repeat; background-size:16px 18px; vertical-align: middle;}
