#subject_body{ height:80px; margin-top:10px;}

.hide{display:none;}


.back_btn{width:40px; height:45px; position:absolute; font-size:0; left:0px; top:0px; background:url(../images/return_btn.jpg) no-repeat center center; -webkit-background-size:12px 21px;z-index:2;}
.refresh_btn { display:none; width:40px; height:45px; position:absolute; font-size:0;  top:0px; background:url(../images/refresh_btn.png) no-repeat center center; -webkit-background-size:18px 15px;}
#subject_refresh_btn {right:40px;}
#comment_refresh_btn {right:0px;}
#message_refresh_btn {right:0px;}
#send_subject{border: 1px solid #1e84db;
background: #2d90e4;
color: #fff;
border-radius: 5px;
box-shadow: 0 0 3px #bfc2c6;height:40px;font-size:14px;text-align:center;line-height:40px;margin-top:10px;display:block;}
.subject_creator_header #cancel_subject{position:absolute; top:0px; left:0px;width:40px; font-size:0; height:45px; background:url(../images/cancel_comment.png) no-repeat center center; -webkit-background-size:18px 18px;}

.comment_list_view li{	padding:8px 10px;	border-bottom:15px solid #ecedee;	border-top:1px solid #fff;	background-color:#fff;	font-size:14px;}
.more_btn{display: block;font-size: 13px;margin: 15px;padding: 5px 1px; height: 22px;background: #f8f8f9;background-color: #f1f1f2;
background-image: -webkit-linear-gradient(top,#f8f8f9,#e6e6e8);
background-repeat: repeat-x;
filter: progid:DXImageTransform.Microsoft.gradient(startColorstr='#f8f8f9', endColorstr='#e6e6e8', GradientType=0);
text-shadow: 0 1px 0 #fff; border: 1px solid #bbb; color: #666!important; box-shadow: 0 1px 0 #fff inset,0 1px 0 rgba(0,0,0,.1); line-height: 1.7;text-decoration: none!important;vertical-align: middle;text-align: center;cursor: pointer;border-radius: 3px;white-space: nowrap;}
.loadbar{background-color: #99aaca;
border: 1px solid #96a6c9;
float: left;
margin-right: 4px;
margin-top: 6px;
width: 6px;
height: 18px;
-webkit-animation-duration: 1s;
-webkit-animation-iteration-count: infinite;
-webkit-animation-name: loadingbar;}
.loadbar:nth-child(2) { -webkit-animation-delay: 0.1s; }
.loadbar:nth-child(3) { -webkit-animation-delay: 0.2s; }
/* The actual animation */
@-webkit-keyframes loadingbar {
	 0% { }
	10% { margin-top:5px; height:22px; border-color:#d1d8e6; background-color:#bac5db; }
	20% { margin-top:0px; height:32px; border-color:#d1d7e2; background-color:#c6ccda; }
	30% { margin-top:1px; height:30px; border-color:#d1d8e6; background-color:#bac5db; }
	40% { margin-top:3px; height:26px; }
	50% { margin-top:5px; height:22px; }
	60% { margin-top:6px; height:18px; }
	70% { }
	/* Missing frames will cause the extra delay */
	100% { }
}
.preload_item{background: #ecedee;text-align: center;width: 40px;margin: 200px auto;}


/*message*/
.message_list_view li{padding:0 15px 5px; border-top:15px solid #ecedee;} 
.message_username{font-size:14px; color:#149eff; padding:5px 0 1px 0;}
.message_content{font-size:14px; color:#383838; word-wrap: break-word; word-break : break-all; line-height:180%; }
.message_reply_topic{background:#e9f4fc; line-height:150%; color:#a2b5c3; padding:5px; position:relative; margin-top:10px;}
.message_reply_topic:after{position:absolute; content:''; width:10px; height:10px; background:#e9f4fc; -webkit-transform: rotate(45deg); top:-5px; left:15px;}
.message_reply_source{padding-top:5px; color:#6d6d6d; font-size:14px;}

.create_btn_wrapper {display: block;padding: 10px;position: fixed;z-index: 198;bottom: 0;left: 0;}
.create_btn {width: 40px;height: 40px;border-radius: 40px;background: #0b8feb -webkit-gradient(linear,0 0,0 100%,from(#159bf8),to(#0081dc));-webkit-box-shadow: 0 1px 2px 1px rgba(0,0,0,0.2); cursor:pointer;}
.create_btn_plus {width: 40px;height: 40px;position: absolute;}
.create_btn_plus:before,.create_btn_plus:after{content: '';position: absolute;background: #fff;left: 50%;top: 50%;}
.create_btn_plus:before {width: 4px;height: 18px;margin: -9px 0 0 -2px;}
.create_btn_plus:after{width: 18px;height: 4px;margin: -2px 0 0 -9px;}

.comment_btn_wrapper { display: block;padding: 10px;position:fixed;z-index: 198;bottom: 0;left: 0;display:none;}
.comment_back_btn {width: 40px;height: 40px;border-radius: 40px;background: #0b8feb -webkit-gradient(linear,0 0,0 100%,from(#159bf8),to(#0081dc));-webkit-box-shadow: 0 1px 2px 1px rgba(0,0,0,0.2); cursor:pointer;}
.comment_back_plus {width: 40px;height: 40px;position: absolute;-webkit-transform: rotate(45deg);}
.comment_back_plus:before,.comment_back_plus:after{content: '';position: absolute;background: #fff;left: 50%;top: 50%;}
.comment_back_plus:before {width: 4px;height: 14px;margin: -9px 0 0 -6px;}
.comment_back_plus:after{width: 14px;height: 4px;margin: 1px 0 0 -6px;}


