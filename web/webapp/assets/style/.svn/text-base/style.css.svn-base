html {
    -webkit-tap-highlight-color: rgba(0,0,0,0);
}

body,ul,li {
	padding:0;
	margin:0;
	border:0;
}

body {
	font-size:12px;
	-webkit-user-select:none;
    -webkit-text-size-adjust:none;
	font-family:helvetica;
	background:#ecedee;
	overflow-x:hidden;
}
body { margin: 0; padding: 0; }
div, dl, dt, dd, ul, ol, li, h1, h2, h3, h4, h5, h6, pre, form, fieldset, input, textarea, blockquote, p { margin: 0; padding: 0; }
ul { list-style: none; }
li { list-style-type: none; }
img { border: 0; vertical-align: top; }
a {text-decoration: none; }
a:hover {text-decoration:none; }

.e_clear:after { clear: both; content: "."; display: block; height: 0; visibility: hidden; }
.e_clear { display: inline-block; }
.e_clear { display: block; }



.subject_creator_header a {
	color:#f3f3f3;
	text-decoration:none;
	font-weight:bold;
	text-shadow:0 -1px 0 rgba(0,0,0,0.5);
}

.content {
	position:relative; 
	z-index:1;
	width:100%;
	background:#ecedee;
}

.subject_list_view {
	position:relative;
/*	-webkit-touch-callout:none;*/
	-webkit-tap-highlight-color:rgba(0,0,0,0);
	width:100%;
	padding:0;
}

ul {
	position:relative;
	list-style:none;
	padding:0;
	margin:0;
	width:100%;
	text-align:left;
}

li {
	padding:0 10px;
	border-bottom:15px solid #ecedee;
	background-color:#fff;
	font-size:14px;
}

.subject_item:active {
	background:#f6f6f6;
}

li > a {
	display:block;
}

li.subject_header{padding:10px; background:#fff;}
.cal_img_border{float:left; width:60px; height:60px; -webkit-border-radius: 55px; border-radius: 55px; border:3px solid #ddd; margin-left:5px;}
.cal_img{width:60px; height:60px;  background:#ddd; overflow:hidden;
-webkit-border-radius: 55px; border-radius: 55px; text-align:center;
 }
.cal_img img{width:64px; height:auto;}
.cal_info{margin-left:75px; padding-top:5px;}
.cal_info h3{font-size:18px; margin-bottom:3px;overflow:hidden;text-overflow: ellipsis;white-space: nowrap;}
.cal_info p{font-size:13px; line-height:130%; color:#677285;}

li.subject_item{padding:8px 20px 7px; bakcground:#fff;}
.top,.notice,.excellent,.louzhu{display:inline-block; padding:3px 5px; -webkit-border-radius: 3px; border-radius: 3px; color:#fff; line-height:100%; font-weight:500; margin-right:5px;}
.top{background:#1ad1ff;}/*置顶*/
.notice{background:#93c820;}/*公告*/
.excellent{background:#ff9c00;}/*精华*/
.louzhu{background:#1ad1ff;}/*楼主*/
.subject_item h3,.comment_header h3,.comment_username{line-height:130%;}
.subject_item p{color:#677285; font-size:15px; padding:5px 0; line-height:20px;word-wrap:break-word;word-break:break-all;}
.comment_header p,.comment_txt{font-size:15px; padding:5px 0; color:#000; min-height:20px;word-wrap:break-word;word-break:break-all;}
.comment_header h3,.comment_username{color:#677285;margin-right:40px;}
/*主题列表时间作者显示*/
.subject_list_bottom,.comment_item_bottom,.comment_header_bottom{padding:5px 0 0 0; border-top:2px solid #ecedee; color:#677285; font-size:13px;}
.subject_list_bottom span{padding-left:15px;}
.subject_list_bottom .re_time{float:right; margin-left:10px; background:url(../images/re_time.png) no-repeat left center; -webkit-background-size:12px 12px;}
.subject_list_bottom .com_num{float:right; background:url(../images/com_num.png) no-repeat left center; -webkit-background-size:12px 12px;}
.subject_list_bottom .author{float:left; background:url(../images/author.png) no-repeat left center; -webkit-background-size:12px 12px;
max-width: 110px;
overflow: hidden;
text-overflow: ellipsis;
white-space: nowrap;}

/*内容列表作者显示*/
.comment_header_bottom{ color:#677285;}
.comment_header_bottom .author{float:left; margin-right:5px;
overflow: hidden;
white-space: nowrap;
max-width: 110px;
text-overflow: ellipsis;
}
.comment_header_bottom .re_time{float:left;}
.comment_header_bottom .delete_subject_btn{float:right;color:#677285;}

/*内容列表评论用户显示*/
.comment_item_bottom {color:#677285;}
.comment_item_bottom .delete_comment_btn,.comment_item_bottom .reply_btn{float:right; margin-left:12px; color:#677285;}

.comment_header{padding-top:15px;}
.comment_header .reply_num{margin:0 32px 0 150px; text-align:center; padding:0; font-size:14px; color:#677285;}

.comment_header,.comment_item{padding:5px 10px; bakcground:#fff;position:relative;}
.floor{padding:3px 10px; background:#ddd; color:#fff; position:absolute; right:-1px; top:10px; -webkit-border-radius: 3px; border-radius: 3px;}

/*评论区域和按钮*/
.comment_edit_area{position:relative;padding:0 10px 10px 10px;}
.comment_input_div{margin-right:90px;}
#comment_input{width:100%; font-size:14px; color:#999; height:60px;border: 1px solid #c6c6c6;  box-shadow: 0 0 5px #dfdfdf inset; background:#fbfbfb;padding:10px;font-weight:600;border-radius:5px;}
.comment_send_btn{border: 1px solid #1e84db;background: #2d90e4;color: #fff; padding:0 10px; border-radius: 5px;box-shadow: 0 0 3px #bfc2c6; line-height: 30px; display: block; font-size:14px; margin:-8px 0 0 0;width:40px;text-align:center;height:30px; position:absolute; top:10px; right:5px;}
.reply_comment_div {position:relative;margin-top:10px;}
.reply_input_div {margin-right:80px;}
.reply_input { padding:5px; height:24px; width:100%;border-radius: 5px;font-size:14px;border: 1px solid #c6c6c6; box-shadow: 0 0 5px #dfdfdf inset;}
.reply_send {display:block;border: 1px solid #1e84db;background: #2d90e4;color: #fff;border-radius: 5px;box-shadow: 0 0 3px #bfc2c6;padding: 0 10px;line-height: 30px;width:30px;position:absolute;top:2px;right:5px;height:30px;}


.editor_input{
white-space: pre-wrap;
word-wrap: break-word;
