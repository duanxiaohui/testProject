body{ font-family: "Microsoft YaHei";}
*{margin:0; padding:0;}
ul{list-style: none;}
li{list-style-type: none;}
a { color:#0d23f4; cursor: pointer; text-decoration: none; }
.e_clear:after { clear: both; content: "."; display: block; height: 0; visibility: hidden; }
.e_clear { display: inline-block; }
.e_clear { display: block; }


.main{margin:0 auto; }
.top{width:320px; margin:0 auto; height:168px; background:url(../images/img.jpg) no-repeat; -webkit-background-size:320px 168px;}
.text{width:320px; margin:0 auto;}
.text h3{font-size:16px; text-align:center; padding-top:5px; margin:3px;}
.text h4{font-size:14px; padding-top:5px; margin:3px;}
.text p.center{text-align:center;}
.text p{text-indent:2em; line-height:22px; color:#666; margin:3px; font-size:12px;}
.btn{display:block;width:180px; height:30px; margin:10px auto; text-align:center; line-height:30px; color:#fff; background:#508e1e; border:1px solid #687e4d;-moz-border-radius: 3px; -webkit-border-radius: 3px; -khtml-border-radius: 3px; border-radius: 3px;}
