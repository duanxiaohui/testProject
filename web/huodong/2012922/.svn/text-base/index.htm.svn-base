<input type="hidden" value='#秋分#秋分证明秋季真的来了，大家打算做什么传统活动？我想吃“苋菜”做“秋汤”！（更多内容请关注 @a365rili ）' id="qqTxt3" />

<input type="hidden" id="UID" value="">
<input type="hidden" id="PWD" value="">

<script type="text/javascript">
	var option = "0";
	var userid = null;
	var password = null;
	var content = null;
	function getUserInfo()
	{
		if (/android/i.test(navigator.userAgent))
		{
			userid = AliansBridge.getUserId();
			password = AliansBridge.getUserPassword();
		}
		if (/ipad|iphone|mac/i.test(navigator.userAgent)){
			userid = document.getElementById('UID').value;
			password = document.getElementById('PWD').value;
		}
	}

	function optBtn1Click(){
		document.getElementById('optBtn2').style.display = "none";
		document.getElementById('optBtn3').style.display = "none";
		document.getElementById('optBtn1').style.display = "block";
		option = "1";
	}
	function optBtn2Click(){
		document.getElementById('optBtn1').style.display = "none";
		document.getElementById('optBtn3').style.display = "none";
		document.getElementById('optBtn2').style.display = "block";
		option = "2";
	}
	function optBtn3Click(){
		document.getElementById('optBtn1').style.display = "none";
		document.getElementById('optBtn2').style.display = "none";
		document.getElementById('optBtn3').style.display = "block";
		option = "3";
	}
	
	function qqBtnClick(){
		getUserInfo();
		if(userid=='null'||!userid)
		{
			alert("您的365日历版本暂不支持发微博，请升级到最新版");
		}
		else
		{
			if(option == "0"){
				alert("还未选择发送内容，请点击选择！");
				return false;
			}
			var txt = document.getElementById('qqTxt'+option).value;
			AJAX(
				'/qt/weiboFromWebView.do', true, 'POST', 
				'content='+txt+'&u='+userid+'&p='+password+'&img=qiufen', 
				function (result) {
					result = eval("("+result+")");
					if(result.state == "ok")alert("微博已经发送成功！");
					else alert("发送失败，是否未登录365账号或未绑定腾讯微博！请返回软件操作后重试。");
			});
		}
	}
	function sinaBtnClick(){
		getUserInfo();
		if(userid=='null'||!userid)
		{
			alert("您的365日历版本暂不支持发微博，请升级到最新版");
		}
		else
		{
			if(option == "0"){
				alert("还未选择发送内容，请点击选择！");
				return false;
			}
			var txt = document.getElementById('sinaTxt'+option).value;
			AJAX(
				'/weibo/statusFromWebView.do', true, 'POST', 
				'content='+txt+'&u='+userid+'&p='+password+'&img=qiufen', 
				function (result) {
					result = eval("("+result+")");
					if(result.state == "ok")alert("微博已经发送成功！");
					else alert("发送失败，是否未登录365账号或未绑定新浪微博！请返回软件操作后重试。");
			});
			
		}
	}
	
</script>
</body>
