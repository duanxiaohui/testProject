*{margin:0; padding:0;}
body{font-size:12px;}
ul{list-style: none;}
li{list-style-type: none;}
a{text-decoration: none;}
.main{width:320px; margin:0 auto; padding-bottom:70px; background:url(../images/bottom.jpg) no-repeat center bottom;}
.top{height:68px; height:115px;background:url(../images/top.jpg) no-repeat center top;}
.content1{padding:0 15px 15px 130px;background:url(../images/icon.jpg) no-repeat 15px 15px; font-size:12px; color:#4b6db4; line-height:22px;}
